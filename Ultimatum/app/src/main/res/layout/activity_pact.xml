<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PactActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:fillViewport="true" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v4.widget.SwipeRefreshLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp"
                    android:id="@+id/swipeRefreshLayout">

                    <ScrollView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:clickable="true">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:layout_gravity="center"
                                android:textColor="@color/colorPrimary"
                                android:id="@+id/habitText"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:layout_gravity="center"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:textSize="18sp"
                                android:textColor="@color/colorPrimaryLight"
                                android:id="@+id/messageText"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:id="@+id/stakesText"
                                android:layout_marginTop="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="50dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:id="@+id/todayText"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/minimal_button"
                                    android:textSize="15sp"
                                    android:textColor="@color/white"
                                    android:shadowColor="@color/text_shadow"
                                    android:background="@drawable/minimal_button_background"
                                    android:shadowDx="2"
                                    android:shadowDy="2"
                                    android:shadowRadius="2"
                                    android:text="I did it!"
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:layout_height="60dp"
                                    android:layout_width="match_parent"
                                    android:layout_marginBottom="15dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginTop="15dp" />
                                <TextView
                                    android:id="@+id/minimal_button2"
                                    android:textSize="15sp"
                                    android:textColor="@color/white"
                                    android:shadowColor="@color/text_shadow"
                                    android:background="@drawable/minimal_button_background"
                                    android:shadowDx="2"
                                    android:shadowDy="2"
                                    android:shadowRadius="2"
                                    android:text="Well..."
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:layout_height="60dp"
                                    android:layout_width="match_parent"
                                    android:layout_marginBottom="15dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginTop="15dp" />
                            </LinearLayout>


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/minimal_button"
                                android:layout_marginTop="30dp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:id="@+id/friendText"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">
                                <TextView
                                    android:id="@+id/minimal_button3"
                                    android:textSize="15sp"
                                    android:textColor="@color/white"
                                    android:shadowColor="@color/text_shadow"
                                    android:background="@drawable/minimal_button_background"
                                    android:shadowDx="2"
                                    android:shadowDy="2"
                                    android:shadowRadius="2"
                                    android:text="They managed."
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:layout_height="60dp"
                                    android:layout_width="match_parent"
                                    android:layout_marginBottom="15dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginTop="15dp" />

                                <TextView
                                    android:id="@+id/minimal_button4"
                                    android:textSize="15sp"
                                    android:textColor="@color/white"
                                    android:shadowColor="@color/text_shadow"
                                    android:background="@drawable/minimal_button_background"
                                    android:shadowDx="2"
                                    android:shadowDy="2"
                                    android:shadowRadius="2"
                                    android:text="Not so good."
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:layout_height="60dp"
                                    android:layout_width="match_parent"
                                    android:layout_marginBottom="15dp"
                                    android:layout_marginLeft="15dp"
                                    android:layout_marginRight="15dp"
                                    android:layout_marginTop="15dp" />
                            </LinearLayout>

                        </LinearLayout>

                    </ScrollView>


                </android.support.v4.widget.SwipeRefreshLayout>
<!--
                <TextView
                    android:id="@+id/minimal_button"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:shadowColor="@color/text_shadow"
                    android:background="@drawable/minimal_button_background"
                    android:shadowDx="2"
                    android:shadowDy="2"
                    android:shadowRadius="2"
                    android:text="PACT DETAILS"
                    android:gravity="center"
                    android:layout_weight="0"
                    android:layout_height="60dp"
                    android:layout_width="match_parent"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="15dp" />  -->

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
